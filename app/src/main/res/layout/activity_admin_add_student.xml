<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/background3"
    tools:context=".AdminAddStudent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kaushan"
            android:textSize="18sp"
            android:text="Roll No::    "
            android:id="@+id/text9"/>
        <EditText
            android:layout_width="300dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:textSize="18sp"
            android:inputType="number"
            android:fontFamily="@font/kaushan"
            android:layout_height="wrap_content"
            android:id="@+id/text10"
            android:layout_toRightOf="@+id/text9" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView

            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kaushan"
            android:textSize="18sp"
            android:text="Name :    "
            android:id="@+id/text1"/>
        <EditText
            android:layout_width="300dp"

            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:textSize="18sp"
            android:fontFamily="@font/kaushan"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:layout_toRightOf="@+id/text1" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:fontFamily="@font/kaushan"
            android:text="College :    "
            android:id="@+id/text3"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kaushan"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:id="@+id/text4"
            android:layout_toRightOf="@+id/text3" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:textSize="18sp"
            android:text="Course Opted :    "
            android:fontFamily="@font/kaushan"
            android:id="@+id/text5"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:textSize="18sp"
            android:fontFamily="@font/kaushan"
            android:id="@+id/text6"
            android:layout_toRightOf="@+id/text5" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:text="Date of join:    "
            android:fontFamily="@font/kaushan"
            android:id="@+id/text7"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="date"
            android:fontFamily="@font/kaushan"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:id="@+id/text8"
            android:layout_toRightOf="@+id/text7" />


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:id="@+id/addstudent"
        android:layout_gravity="center"/>

</LinearLayout>